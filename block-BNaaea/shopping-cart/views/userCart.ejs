
   <%- include('partials/header') -%>
  
      <h1><%= user.name%> shopping carts</h1>
    
      <ul class="index-root">
        <%if(carts.length) { %> <% carts.forEach(cart => { %>
        <li>
          <h3><%= cart.name%></h3>
          <p><%= cart.quantity%></p>
          <p><%= cart.price%></p>
  
         
          <a href="/carts/<%= cart.id%>/delete">
            <button class="btn"> Remove from cart<button>
          </a>
        </li>
        <% }) %> <% } else {%>
        <h2>no items in cart</h2>
        <% }%>
      </ul>
      <%- include('partials/footer') -%>